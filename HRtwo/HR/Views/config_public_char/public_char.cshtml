
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>public_char</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
    <script src="~/javascript/jquery-1.7.2.js"></script>
</head>
<body>
    <div id="all">
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        @*<input type="button" value="添加" class="BUTTON_STYLE1"
                               onclick="window.location.href='public_char_add.html';">*@
                        @Html.ActionLink("添 加", "public_char_add", new { }, new { @class = "BUTTON_STYLE1", style = "background-color:gainsboro;border-color:lightslategrey;" })
                    </td>
                </tr>
            </table>
            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="49%" class="TD_STYLE1">
                        属性种类
                    </td>
                    <td width="44%" class="TD_STYLE1">
                        属性名称
                    </td>
                    <td width="7%" class="TD_STYLE1" align="center">
                        删 除
                    </td>
                </tr>
                <tr v-for="(item,i) in rows">
                    <td style="display:none">{{item.Id}}</td>
                    <td class="TD_STYLE2">{{item.attribute_kind}}</td>
                    <td class="TD_STYLE2">{{item.attribute_name}}</td>
                    <td class="TD_STYLE2" align="center"><a href="#" v-on:click="Del(item.Id)">删 除</a></td>
                </tr>

            </table>
            <p>
 
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#all",
            data: {
                rows:null
            },
            methods: {
                load: function () {
                    var v = this;
                    $.ajax({
                        url: "/config_public_char/SelectAll",
                        type:"post",
                        success: function (msg) {
                            var data = eval("(" + msg + ")");
                            v.rows = data;
                        }
                    });
                },
                Del: function (obj) {
                    if (confirm('确认删除?')) {
                        var v = this;
                        $.ajax({
                            url: "/config_public_char/Del/"+obj,
                            type: "post",
                            success: function (msg) {
                                if (msg == "ok") {
                                    alert('删除成功!');
                                    v.load();
                                } else {
                                    alert('删除失败!');
                                }
                            }
                        });
                    }
                }
            }
        });
        vm.load();
    </script>
</body>
</html>
