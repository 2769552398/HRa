
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>third_kind</title>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/vue.js"></script>
</head>
<body>
    <div id="div1"> 
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--III级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("添 加", "third_kind_register", new { controller = "config_file_third_kind"}, new { @class = "BUTTON_STYLE1", style = "background-color:gainsboro;border-color:lightslategrey;" })
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="14%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="14%" class="TD_STYLE1">
                    II级机构名称
                </td>
                <td width="14%" class="TD_STYLE1">
                    II级机构编号
                </td>
                <td width="14%" class="TD_STYLE1">
                    III级机构名称
                </td>
                <td width="17%" class="TD_STYLE1">
                    销售责任人编号
                </td>
                <td width="17%" class="TD_STYLE1">
                    是否为零售店
                </td>
                <td width="5%" class="TD_STYLE1">
                    变更
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>

            
             
            <tr v-for="(item,index) in dt">
                <td class="TD_STYLE2">
                    {{item.first_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_sale_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.third_kind_is_retail}}
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/config_file_third_kind/third_kind_change/'+item.Id]">变更</a>
                </td>
                <td class="TD_STYLE2">
                    <a href="#" v-on:click="Del(item.Id)">删除</a>
                </td>
            </tr>

        </table>
        <script type="text/javascript">
        var vm = new Vue({
            el:"#div1",
            data: {
                dt:null
            },
            methods: {
                load: function () {
                    var v = this;
                    $.ajax({
                        url: "/config_file_third_kind/Select",
                        type: "post",
                        success: function (msg) {
                            var data = eval("(" + msg + ")");
                            v.dt = data;
                        }
                    });
                },
                Del: function (obj) {
                    if (confirm('确认删除?')) {
                        var v = this;
                        $.ajax({
                            url: "/config_file_third_kind/Del/" + obj,
                            type:"post",
                            success: function (msg) {
                                if (msg == "ok") {
                                    alert('删除成功!');
                                    v.load();
                                } else {
                                    alert('删除失败!');
                                }
                            }
                        });
                    }
                }
            }
        });
        vm.load();
        </script>
</div>
</body>
</html>
