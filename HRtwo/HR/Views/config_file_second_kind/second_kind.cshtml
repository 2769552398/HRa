
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>second_kind</title>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/Scripts/vue.js"></script>
    <script type="text/javascript" src="../../javascript/comm/comm.js">
        function submission() {
            document.forms[0].submit();
        }
        function page(currentPage) {
            document.getElementById("pid").value = currentPage;
            document.forms[0].submit();
        }
    </script>
</head>
<body>
    <div id="div1"> 
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--II级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    @Html.ActionLink("添 加", "second_kind_register", new { controller = "config_file_second_kind"}, new { @class = "BUTTON_STYLE1", style = "background-color:gainsboro;border-color:lightslategrey;" })
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="15%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="15%" class="TD_STYLE1">
                    II级机构编号
                </td>
                <td width="15%" class="TD_STYLE1">
                    II级机构名称
                </td>
                <td width="22%" class="TD_STYLE1">
                    薪酬发放责任人编号
                </td>
                <td width="22%" class="TD_STYLE1">
                    销售责任人编号
                </td>
                <td width="5%" class="TD_STYLE1">
                    变更
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>

            <tr  v-for="(item,index) in dt">
                <td class="TD_STYLE2">
                    {{item.first_kind_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_id}}
                </td>
                <td class="TD_STYLE2">
                   {{item.second_kind_name
                    }}
                </td>
                <td class="TD_STYLE2">
                   {{item.second_salary_id}}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_sale_id}}
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/config_file_second_kind/second_kind_change/'+item.Id]">变更</a>
                </td>
                <td class="TD_STYLE2">
                   <a href="#" v-on:click="Del(item.Id)">删除</a>
                </td>
            </tr>

            

        </table>
        <br><br>
        <th colspan="7" class="pager"></th>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el: "#div1",
            data: {
                dt: null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/config_file_second_kind/Select",
                        type: "post",
                        data: "",
                        success: function (msg) {
                            var dd = eval("(" + msg + ")");
                            t.dt = dd;
                        }
                    });
                },
                Del(obj) {
                    if (confirm('确定删除这个智障吗?')) {
                        var v = this;
                        var ids = obj;
                        $.ajax({
                            url: "/config_file_second_kind/Del/" + ids,
                            type: "post",
                            data: "",
                            success: function (sj2) {
                                if (sj2 == "ok") {
                                    alert("删除成功！");
                                    v.load();
                                } else {
                                    alert("删除失败,请检查此项下是否有子机构！");
                                }
                            }
                        });
                    }
                }

            },
            created: function () {
                this.load();
            }
        });
    </script>
</body>
</html>
