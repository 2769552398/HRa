
@{
    Layout = null;
}

<!DOCTYPE html>
@model Model.config_public_charModel
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>public_char_add</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
    <script type="text/javascript">
       
        function show(msg) {
            if (msg == "ok") {
                alert('添加成功!');
                window.location.href = '/config_public_char/public_char';
            }
        }
    </script>
</head>
<body>
    <div> 
         @using (Ajax.BeginForm("public_char_add", new AjaxOptions() { HttpMethod = "post", OnSuccess = "show" }))
         {
                <table width="100%">
                    <tr>
                        <td>
                            <font color="black">
                                您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置--公共属性添加
                            </font>
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                            <input type="submit" value="提交" class="BUTTON_STYLE1">
                            <input type="button" value="返回" class="BUTTON_STYLE1"
                                   onclick="history.back();">
                        </td>
                    </tr>
                </table>

                <table width="100%" border="1" cellpadding=0 cellspacing=1
                       bordercolorlight=#848284 bordercolordark=#eeeeee
                       class="TABLE_STYLE1">
                    <tr>
                        <td class="TD_STYLE1" width="19%">
                           @Html.Label("属性种类")
                        </td>
                        <td class="TD_STYLE2" width="81%">
                            @*<input type="text" class="INPUT_STYLE1" name="cpc.attributeKind" />*@
                            @*@Html.DropDownList("attribute_kind",@ViewBag.dtr as IEnumerable<SelectListItem>)*@
                            @Html.TextBox("attribute_kind", "", new { @class = "INPUT_STYLE1", placeholder = "请输入属性种类"})
                            @Html.ValidationMessageFor(e => e.attribute_kind)
                        </td>
                    </tr>
                    <tr>
                        <td class="TD_STYLE1">
                           @Html.Label("属性名称")
                        </td>
                        <td class="TD_STYLE2">
                            @*<input type="text" class="INPUT_STYLE1" name="cpc.attributeName" />*@
                            @Html.TextBox("attribute_name", "", new { @class = "INPUT_STYLE1", placeholder = "请输入属性名称" })
                            @Html.ValidationMessageFor(e => e.attribute_name)
                        </td>
                    </tr>
                </table>
         }
</div>
</body>
</html>
