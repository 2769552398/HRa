
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>first_kind</title>
   
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/css/table.css" rel="stylesheet" />
    <script src="~/javascript/comm/comm.js"></script>
</head>
<body>
    <div id="all">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--I级机构设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    @*<input type="button" value="添加" class="BUTTON_STYLE1"
                        onclick="window.location.href = '~/Views/config_file_first_kind/first_kind_register.cshtml'" />*@
                    @Html.ActionLink("添 加","first_kind_register",new { controller="config_file_first_kind"},new { @class = "BUTTON_STYLE1", style = "background-color:gainsboro;border-color:lightslategrey;" })
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="20%" class="TD_STYLE1">
                    I级机构编号
                </td>
                <td width="20%" class="TD_STYLE1">
                    I级机构名称
                </td>
                <td width="25%" class="TD_STYLE1">
                    薪酬发放责任人编号
                </td>
                <td width="25%" class="TD_STYLE1">
                    销售责任人编号
                </td>
                <td width="5%" class="TD_STYLE1">
                    变更
                </td>
                <td width="5%" class="TD_STYLE1">
                    删除
                </td>
            </tr>
            <tr v-for="(item,i) in rows">
                <td style="display:none;">{{item.Id}}</td>
                <td>{{item.first_kind_id}}</td>
                <td>{{item.first_kind_name}}</td>
                <td>{{item.first_kind_salary_id}}</td>
                <td>{{item.first_kind_sale_id}}</td>
                <td><a v-bind:href="['/config_file_first_kind/first_kind_change/'+item.Id]">变更</a></td>
                <td><a href="#" v-on:click="Del(item.Id)">删除</a></td>
            </tr>
        </table>
        <p>
    </div>
    <script type="text/javascript">
        var vm = new Vue({
            el:"#all",
            data: {
                rows:null
            },
            methods: {
                load: function () {
                    var v = this;
                    $.ajax({
                        url: "/config_file_first_kind/Select",
                        type: "post",
                        success: function (msg) {
                            var data = eval("(" + msg + ")");
                            v.rows = data;
                        }
                    });
                },
                Del: function (obj) {
                    if (confirm('确认删除?')) {
                        var v = this;
                        $.ajax({
                            url: "/config_file_first_kind/Del/"+obj,
                            type:"post",
                            success: function (msg) {
                                if (msg == "ok") {
                                    alert('删除成功!');
                                    v.load();
                                } else {
                                    alert('删除失败!');
                                }
                            }
                        });
                    }
                }
            }
        });
        vm.load();
    </script>
</body>
</html>
